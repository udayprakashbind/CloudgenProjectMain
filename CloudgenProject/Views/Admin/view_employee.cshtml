
@{
    ViewBag.Title = "AllEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"/>
<style>
    .adv-title {
        background: #495057;
        padding: 9px 0px;
        color: #fff;
        font-size: 19px;
        font-weight: 100;
        text-align: center;
    }

    .content-body .container-fluid {
        padding: 15px 29px 0;
    }

    .form-control {
        height: 35px !important;
        border: 1px solid #88c3d8;
    }
    .adv-title {
        padding: 5px !important;
        margin-bottom: 3px !important;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body" style="padding-top:0px"; >
                    <div class="form-group row justify-content-md-center" style="background-color:#495057; ">
                        <h2 class="adv-title">Employee List</h2>
                    </div>
                    <div class="table-responsive">
                        <table id="example1" class="table table-striped table-bordered zero-configuration tb-list" width="100%" border="1" style="font-size: 12px; text-align: center">
                            <thead >
                                <tr>
                                    <th>Employee Id</th>
                                    <th>Employee Name</th>
                                    <th>Contact No.</th>
                                    <th>Employee Designation</th>
                                    <th>Employee Branch</th>
                                    <th>Current Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody  style="color:black; ">
                                @if (Model != null && Model.Count > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.Raw(item.employee_id)</td>
                                            <td>@Html.Raw(item.employee_first_name) @Html.Raw(item.employee_last_name)</td>
                                            <td>@Html.Raw(item.mobile_no)</td>
                                            <td>@Html.Raw(item.designation)</td>
                                            <td>@Html.Raw(item.employee_branch)</td>
                                            <td>@Html.Raw(item.current_status)</td>

                                            <td>
                                                @*<a href="/admin/employee_management?id=@(item.id)"><i class="fas fa-edit"></i></a>
            <a href="/admin/delet_employee?id=@(item.id)"><i class="fas fa-regular fa-trash"></i></a>*@
                                                <a class="btn btn-link" href="/admin/employee_management?id=@(item.id)" id="Edit"> <img src="~/Contents/images/edit-icon.png" style="width:15px; height:15px" /></a>|
                                                <a class="btn btn-link delete-id" href="#" data-id="@item.id" title="Delete">
                                                    <img src="~/Contents/images/Delete.png" style="width:15px; height:15px" />
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->

<script>
    $(document).ready(function () {
        // Add a click event handler to the delete button with the class "delete-id"
        $('.delete-id').click(function (e) {
            e.preventDefault();

            // Get the school ID from the data attribute
            var Id = $(this).data('id');

            // Show a confirmation dialog using Swal
            Swal.fire({
                title: 'Are you sure?',
                text: 'You won\'t be able to revert this!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // If the user clicks "Yes," proceed with the deletion
                    window.location.href = '/admin/delet_employee?id=' + Id;
                }
            });
        });
    });
</script>




