
@{
    ViewBag.Title = "view_assignedlead";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .adv-title {
        background: #495057;
        padding: 9px 0px;
        color: #fff;
        font-size: 19px;
        font-weight: 100;
        text-align: center;
    }

    .content-body .container-fluid {
        padding: 15px 29px 0;
    }

    .form-control {
        height: 35px !important;
        border: 1px solid #88c3d8;
    }

    .adv-title {
        padding: 5px !important;
        margin-bottom: 3px !important;
    }
    .fa-rocket {
        color: darkgreen;
        font-size: 14px;
    }

    .fa-share-square {
        color: orange;
        font-size: 14px;
    }

    .fa-eye {
        color: #0820a3;
        font-size: 14px;
    }

    .custom-btn1 {
        background-color: #00419d; /* Default background color */
        color: white;
