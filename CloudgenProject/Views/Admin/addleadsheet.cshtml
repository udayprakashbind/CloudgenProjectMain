                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Upload Leadsheet</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            @using (Html.BeginForm("addleadsheet", "admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Upload Excel File</label> <br>
                                    <div class="col-sm-8">
                                        <input type="file" id="filesheet" name="excelFile" class="dropify" />
                                    </div>
                                </div>


                                <div class="card-footer">
